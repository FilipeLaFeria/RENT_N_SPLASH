<div class="containe" style="width: 100%; height: 400px;">
  <div class="btn-back">
    <%= link_to "Back to list", :back, class: "btn btn-flat" %>
  </div>
  <div class="row">
    <div class="my_card d-flex justify-content-between col-12">
      <div class="card-img-info col-6">
        <%= cl_image_tag @pool.photo.key, height: 600, crop: :fill %>
        <div class="info">
          <h2><%= @pool.title %></h2>
            <p><%= @pool.address %></p>
            <p><%= @pool.size %> m<sup>2</sup></p>
            <p><%= @pool.description %></p>
        </div>
        <div class="container">
      <%@nearby.each do |pool| %>
     <%= pool.title %>
    <% end %>
    </div>
      </div>
      <div class="card-map-calendar col-6">
        <div id="map" class="map-show" style="width: 100%; height: 400px;"data-markers="<%= @markers.to_json %>"data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        <div class="form-wrapper">Date
          <%= simple_form_for :search, method: "get" do |f| %>
            <div class="calendar-form">
              <%= f.input :date, as: :string, required: false, label: false, input_html: {class: "datepicker input-calendar"} %>
              <%= f.button :submit, "Book this pool", class: "btn btn-flat form-control", style: "width: 30%"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


