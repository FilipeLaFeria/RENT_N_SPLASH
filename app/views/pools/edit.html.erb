<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h2>Edit <%= @pool.title %></h2>

        <%= simple_form_for @pool do |f| %>
          <%= f.input :title, placeholder: 'Title' %>
          <%= f.input :address, placeholder: 'Address' %>
          <%= f.input :size, placeholder: 'Dimensions (in mÂ²)' %>
          <%= f.input :description, placeholder: 'Description' %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-flat fas fa-water' %> or
          <%= link_to 'Cancel', pools_path, class: 'text-danger' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
