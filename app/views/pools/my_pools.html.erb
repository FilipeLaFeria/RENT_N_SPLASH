<div class="main-container col-12 p-0">
  <div style="background-color: white">
      <%= link_to pools_path, class: 'btn btn-flat ml-4 mt-3 my-pools-back-list' do %>
        <i class="fas fa-arrow-left mr-8"></i> Back to list
      <% end %>
      <%= link_to new_pool_path, class: 'btn btn-flat mt-3 my-pools-add-new' do %>
        <i class="fas fa-plus"></i> Add a new pool
      <% end %>
    <div class="d-flex p-0">
      <div class="pools-container">
        <% @pools.each do |pool| %>
          <div>
            <div class="card-pool card-pool-height d-flex justify-content-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path pool.photo.key, height: 300, crop: :fill %>')">
            </div>
            <div class="card-pool-infos">
              <div>
                <h2><%= pool.title %></h2>
                <p><%= pool.address %></p>
              </div>
                <h4 class="card-pool-size dimensions-color"> <%= pool.size %> m<sup>2</sup></h4>
            </div>
            <%= link_to pool_path(pool), class: 'btn btn-flat my-pools-buttons' do %>
              <i class="fas fa-eye"></i> Check
            <% end %>
            <%= link_to edit_pool_path(pool), class: 'btn btn-flat my-pools-buttons' do %>
              <i class="far fa-edit"></i> Edit
            <% end %>
            <%= link_to pool_path(pool), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-flat hovering-delete' do %>
              <i class="far fa-trash-alt"></i> Delete
            <% end %>
          </div>
        <% end %>
      </div>
      <div id="map"style="width: 600px; height: 100vh; "data-markers="<%= @markers.to_json %>"data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
  </div>
</div>
